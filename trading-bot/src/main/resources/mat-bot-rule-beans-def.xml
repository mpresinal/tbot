<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean name="sma5" class="org.presinal.trading.indicator.SMA">
        <property name="period" value="5" />
    </bean>
    
    <bean name="sma8" class="org.presinal.trading.indicator.SMA">
        <property name="period" value="8" />
    </bean>
    
    <bean name="sma13" class="org.presinal.trading.indicator.SMA">
        <property name="period" value="13" />
    </bean>
    
    <bean name="greenCrossingYellowUp" class="org.presinal.trading.bot.strategy.rule.IndicatorStrategyRule" scope="prototype">
        <property name="comparisonOperator" value="GREATER_THAN" />
        <property name="leftOperand" ref="sma5"/>
        <property name="rightOperand" ref="sma8" />
    </bean>
    
    <bean name="greenCrossingYellowDown" class="org.presinal.trading.bot.strategy.rule.IndicatorStrategyRule" scope="prototype">
        <property name="comparisonOperator" value="LESS_THAN" />
        <property name="leftOperand" ref="sma5"/>
        <property name="rightOperand" ref="sma8" />
    </bean>
    
    <bean name="greenCrossingRedUp" class="org.presinal.trading.bot.strategy.rule.IndicatorStrategyRule" scope="prototype">
        <property name="comparisonOperator" value="GREATER_THAN" />
        <property name="leftOperand" ref="sma5"/>
        <property name="rightOperand" ref="sma13" />
    </bean>
    
    <bean name="crossingSmaUpGrp" class="org.presinal.trading.bot.strategy.rule.StrategyRuleGroup" scope="prototype">
        <property name="logicalOperator" value="AND"/>
        <property name="rules">
            <set>
                <ref bean="greenCrossingYellowUp" />
                <ref bean="greenCrossingRedUp" />
            </set>        
        </property>
    </bean>
        
</beans>
